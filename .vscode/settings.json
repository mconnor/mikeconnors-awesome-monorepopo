{
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 8,
  "workbench.editor.limit.perEditorGroup": true,
  "github.copilot.chat.codeGeneration.instructions": [
    {
      "file": "./.vscode/daisyui.md"
    }
  ],
  "mcp": {
    "servers": {
      "Context7": {
        "type": "stdio",
        "command": "npx",
        "args": ["-y", "@upstash/context7-mcp@latest"]
      }
    }
  },
  // "workbench.tree.indent": 20,
  // "workbench.tree.renderIndentGuides": "always",
  // "workbench.iconTheme": "vs-seti",
  "editor.formatOnSave": true,
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "files.associations": {
    "*.css": "tailwindcss",
    "*.json": "jsonc"
  },
  "tailwindCSS.includeLanguages": {
    "plaintext": "tailwindcss",
    "astro": "html"
  },
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
  ],
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.files.exclude": ["**/node_modules/**", "**/dist/**"],
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "class:list",
    "tw",
    "twx"
  ],
  "tailwindCSS.lint.invalidApply": "error",
  "tailwindCSS.lint.invalidScreen": "warning",
  "tailwindCSS.lint.cssConflict": "warning",
  "tailwindCSS.validate": true,
  "tailwindCSS.showPixelEquivalents": true,
  "tailwindCSS.colorDecorators": true,
  "tailwindCSS.classFunctions": ["tw", "clsx"],

  "emmet.includeLanguages": {
    "plaintext": "tailwindcss",
    "astro": "html",
    "postcss": "css",
    "javascript": "javascriptreact",
    "typescript": "typescriptreact",
    "vue-html": "html",
    "svelte": "html",
    "preact": "html",
    "lit": "html",
    "css": "css"
  },
  "javascript.preferences.importModuleSpecifier": "shortest",
  "typescript.preferences.importModuleSpecifier": "shortest",
  "search.exclude": {
    "**/dist/**": true,
    "**/.next/**": true,
    "**/.astro/**": true,
    "**/.turbo/**": true,
    "**/.vercel/**": true,
    "**/coverage/**": true,
    "./pnpm-lock.yaml": true,
    "**/.svelte-kit/**": true
  },
  "[svelte]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false
  },
  "[vue]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false
  },
  "[css]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "astro",
    "typescript",
    "typescriptreact",
    "svelte",
    "vue",
    "preact",
    "toml"
  ],
  "breadcrumbs.filePath": "on",

  "explorer.compactFolders": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": true,

  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "editor.parameterHints.enabled": false,
  "debug.javascript.defaultRuntimeExecutable": {
    "pwa-node": "/Users/mikeconnor/.local/share/mise/shims/node"
  },
  "editor.lineNumbers": "on",
  "explorer.incrementalNaming": "simple"
}
