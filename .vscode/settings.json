{
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 8,
  "workbench.editor.limit.perEditorGroup": true,
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "tailwindCSS.includeLanguages": {
    "astro": "html"
  },
  "tailwindCSS.files.exclude": ["**/node_modules/**", "**/dist/**"],
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "class:list",
    "tw",
    "twx"
  ],
  "tailwindCSS.lint.invalidApply": "error",
  "tailwindCSS.lint.invalidScreen": "warning",
  "tailwindCSS.lint.cssConflict": "warning",
  "tailwindCSS.validate": true,
  "tailwindCSS.showPixelEquivalents": true,
  "tailwindCSS.colorDecorators": true,
  "tailwindCSS.classFunctions": ["tw", "clsx"],
  "emmet.includeLanguages": {
    "postcss": "css",
    "javascript": "javascriptreact",
    "typescript": "typescriptreact",
    "vue-html": "html",
    "svelte": "html",
    "preact": "html",
    "lit": "html",
    "css": "css"
  },
  "javascript.preferences.importModuleSpecifier": "shortest",
  "typescript.preferences.importModuleSpecifier": "shortest",
  "search.exclude": {
    "**/dist/**": true,
    "**/.next/**": true,
    "**/.astro/**": true,
    "**/.turbo/**": true,
    "**/.vercel/**": true,
    "**/coverage/**": true,
    "./pnpm-lock.yaml": true,
    "**/.svelte-kit/**": true
  },
  "[astro]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false
  },
  "[svelte]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false
  },
  "[vue]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false
  },
  "[css]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "astro",
    "typescript",
    "typescriptreact",
    "svelte",
    "vue",
    "preact",
    "toml"
  ],
  "breadcrumbs.filePath": "on",
  "editor.renderWhitespace": "boundary",
  "editor.minimap.enabled": false,
  "editor.colorDecorators": true,
  "editor.stickyScroll.enabled": true,
  "editor.linkedEditing": true,
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "editor.suggestOnTriggerCharacters": true,
  "explorer.compactFolders": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": true,
  "workbench.tree.indent": 12,
  "workbench.tree.renderIndentGuides": "always",
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "terminal.integrated.scrollback": 10000,
  "editor.parameterHints.enabled": false,
  "debug.javascript.defaultRuntimeExecutable": {
    "pwa-node": "/Users/mikeconnor/.local/share/mise/shims/node"
  },
  "editor.lineNumbers": "on",
  "explorer.incrementalNaming": "simple"
}
