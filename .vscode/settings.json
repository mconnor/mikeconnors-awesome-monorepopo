{
  "editor.formatOnSave": false,
  "editor.rulers": [80],
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 80,
  "better-comments.multilineComments": true,
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "files.associations": {
    "*.css": "tailwindcss",
    "*.json": "jsonc"
  },

  // TailwindCSS Configuration
  "tailwindCSS.includeLanguages": {
    "plaintext": "tailwindcss",
    "astro": "html"
  },
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "class:list",
    "tw",
    "twx"
  ],
  "tailwindCSS.classFunctions": ["tw", "clsx"],
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
  ],
  "tailwindCSS.files.exclude": ["**/node_modules/**", "**/dist/**"],
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.validate": true,
  "tailwindCSS.showPixelEquivalents": true,
  "tailwindCSS.colorDecorators": true,
  "tailwindCSS.lint.invalidApply": "error",
  "tailwindCSS.lint.invalidScreen": "warning",
  "tailwindCSS.lint.cssConflict": "warning",
  "emmet.includeLanguages": {
    "plaintext": "tailwindcss",
    "astro": "html",
    "javascript": "javascriptreact",
    "typescript": "typescriptreact",
    "vue-html": "html",
    "svelte": "html",
    "preact": "html",
    "lit": "html",
    "markdown": "html",
    "postcss": "css"
  },
  "javascript.preferences.importModuleSpecifier": "shortest",
  "typescript.preferences.importModuleSpecifier": "shortest",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // "[astro]": {
  //   "editor.defaultFormatter": "esbenp.prettier-vscode"
  // },
  // "[javascript]": {
  //   "editor.defaultFormatter": "esbenp.prettier-vscode"
  // },
  // "[typescript]": {
  //   "editor.defaultFormatter": "esbenp.prettier-vscode"
  // },
  // "[json]": {
  //   "editor.defaultFormatter": "esbenp.prettier-vscode"
  // },
  // "[jsonc]": {
  //   "editor.defaultFormatter": "esbenp.prettier-vscode"
  // },
  "[astro]": {
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false
  },

  "[svelte]": {
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false
  },
  "[vue]": {
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false
  },
  "[css]": {
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false
  },

  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "astro",
    "typescript",
    "typescriptreact",
    "svelte",
    "vue",
    "preact",
    "toml"
  ],
  "breadcrumbs.filePath": "on",

  // Enhanced file nesting for monorepo structure
  // "explorer.compactFolders": false,
  // "explorer.fileNesting.enabled": true,
  // "explorer.fileNesting.expand": true,
  // "explorer.fileNesting.patterns": {
  //   "*.ts": "${capture}.d.ts,${capture}.test.ts,${capture}.spec.ts",
  //   "*.tsx": "${capture}.test.tsx,${capture}.spec.tsx",
  //   "*.vue": "${capture}.test.ts,${capture}.spec.ts",
  //   "*.svelte": "${capture}.test.ts,${capture}.spec.ts",
  //   "*.astro": "${capture}.test.ts,${capture}.spec.ts",
  //   "package.json": "package-lock.json,pnpm-lock.yaml,yarn.lock",
  //   "tailwind.config.*": "tailwind.config.*,postcss.config.*"
  // },

  "editor.parameterHints.enabled": false,
  "editor.lineNumbers": "on",
  "explorer.incrementalNaming": "simple",
  "mcp": {
    "inputs": [],
    "servers": {
      "Context7": {
        "type": "stdio",
        "command": "npx",
        "args": ["-y", "@upstash/context7-mcp@latest"]
      },
      "filesystem": {
        "type": "stdio",
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-filesystem", "./"]
      },
      "github": {
        "type": "stdio",
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-github"]
      }
    }
  },
  "debug.javascript.defaultRuntimeExecutable": {
    "pwa-node": "/Users/mikeconnor/.local/share/mise/shims/node"
  },
  "editor.inlineSuggest.enabled": false
}
