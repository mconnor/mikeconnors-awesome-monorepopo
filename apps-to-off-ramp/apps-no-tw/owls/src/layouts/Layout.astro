---
import BaseLayout from './BaseLayout.astro';

// import Center from '@repo/layout-webcomponents/Center';
import Cover from '@repo/layout-webcomponents/Cover';

import Header from '#components/Header.astro';
import Footer from '#components/Footer.astro';
// import Box from '@repo/ui-lit/Box';
import Sidebar from '@repo/layout-webcomponents/Sidebar';
import LeftNav from '#components/LeftNav.astro';
import Banner from '#components/Banner.astro';
import SubHeader from '#components/SubHeader.astro';
---

<BaseLayout>
  <Cover centeredElement="sidebar-l" noPad>
    <Banner />
    <SubHeader />
    <Header />

    <Sidebar sideWidth="10rem">
      <LeftNav />
      <slot />
    </Sidebar>
    <Footer />
  </Cover>
</BaseLayout>
