{
  "name": "@app/blog-tailwind",
  "type": "module",
  "version": "0.0.2",
  "imports": {
    "#*": "./src/*"
  },
  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "astro dev --host --port 4322",
    "astro-check": "astro check",
    "build": "astro build",
    "build:debug": "npm run diagnose && astro build",
    "diagnose": "node -v && ls -la src/data && cat src/data/authors.toml",
    "preview": "astro preview",
    "astro": "astro",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "sync": "astro sync",
    "clean": "rm -rf dist && echo 'Done.'",
    "lint": "eslint --max-warnings=0",
    "help": "astro -- --help",
    "inspect": "pnpm dlx @eslint/config-inspector@latest",
    "fix": "eslint . --fix",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@astrojs/check": "catalog:",
    "@astrojs/mdx": "catalog:",
    "@astrojs/rss": "catalog:",
    "@astrojs/sitemap": "catalog:",
    "@astrojs/vercel": "catalog:",
    "@iarna/toml": "catalog:",
    "@repo/astro-ui": "workspace:*",
    "@repo/layout-webcomponents": "workspace:*",
    "@tailwindcss/vite": "catalog:",
    "astro": "catalog:",
    "date-fns": "catalog:",
    "tailwindcss": "catalog:"
  },
  "devDependencies": {
    "@repo/design-system": "workspace:*",
    "@repo/eslint-config": "workspace:^",
    "@repo/typescript-config": "workspace:^",
    "@tailwindcss/typography": "catalog:",
    "daisyui": "catalog:",
    "eslint": "catalog:",
    "rollup-plugin-visualizer": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:"
  }
}
