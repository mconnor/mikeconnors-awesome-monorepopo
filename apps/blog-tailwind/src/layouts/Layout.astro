---
import Center from '@repo/layout-webcomponents/Center';
import Cover from '@repo/layout-webcomponents/Cover';
import type { RmUnitType } from '#Types.ts';

// import Footer from '#components/Footer.astro';
import Header from '#components/Header/index.astro';

import BaseLayout from './BaseLayout.astro';

interface Props {
  maxW?: RmUnitType;
  children: unknown;
  title?: string;
  description?: string;
}

const { title, description, maxW = '60ch' } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <Cover centeredElement="center-l" noPad>
    <Header />

    <Center gutters="1ch" max={maxW}><slot /> </Center>
    <slot />
  </Cover>
</BaseLayout>
