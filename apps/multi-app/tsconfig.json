{
  "extends": "@repo/typescript-config/vite.json",
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "jsx": "preserve",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "."
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.astro",
    "src/**/*.vue",
    "jsx.d.ts",
    "*.config.mjs",
    "*.config.js",
  ],
  "exclude": [
    "dist",
    ".astro",
    ".turbo",
    ".vercel"
  ]
}