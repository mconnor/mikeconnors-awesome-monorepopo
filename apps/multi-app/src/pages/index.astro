---
import Box from '@repo/layout-webcomponents/Box';
import { PreactCounter as PCount } from '@repo/preact/counter';
import { Counter as ReactKounter } from '@repo/react/counter';
import CounterSvelte from '@repo/svelte/counter';

// import { SolidCounter as SolidC } from '@repo/solid/counter';
import VueCounter from '#components/vue/VueCounter.vue';
import Layout from '#layouts/Layout.astro';
---

<Layout>
  <Box>
    <Box invert>
      <ReactKounter client:only="react" klass="counter">
        <h1>Hello from React!</h1>
      </ReactKounter>
    </Box>

    <PCount client:visible klass="counter">
      <h1>Hello from Preact!</h1>
    </PCount></Box
  >

  <!-- <Box>
    <SolidC client:visible>
      <h1>Hello from Solid!</h1>
    </SolidC></Box
  > -->

  <Box>
    <VueCounter client:visible>
      <h1>Hello from Vue!</h1>
    </VueCounter></Box
  >

  <Box>
    <CounterSvelte client:visible klass="counter">
      <h1>Hello from Svelte!</h1>
    </CounterSvelte></Box
  >
</Layout>
