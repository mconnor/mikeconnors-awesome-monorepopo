---
interface Props {
  emoj: '🔥' | '💚' | '⚛️';
  framework: string;
  children: unknown;
  count: string;
  textColor: 'text-primary' | 'text-secondary' | 'text-accent';
}

const { emoj, framework, count, textColor } = Astro.props;
---

<div
  class="flex items-center gap-4 rounded-xl bg-base-100 p-6 shadow-lg"
  data-framework="svelte"
>
  <div class={textColor}>
    <span class="text-4xl">{emoj}</span>
  </div>
  <div>
    <div class="text-sm font-medium text-base-content/60">
      {framework} Projects
    </div>
    <div class:list={['text-3xl font-bold', { textColor }]}>{count}</div>
    <div class="text-sm text-base-content/70"><slot name="copy" /></div>
  </div>
</div>
