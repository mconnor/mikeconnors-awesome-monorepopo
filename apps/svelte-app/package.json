    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "eslint": "^9.13.0",
    "prettier": "catalog:",
    "prettier-plugin-svelte": "^3.2.7",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "catalog:",
    "vite": "catalog:"
