{
  "extends": "@repo/typescript-config/vite.json",
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "strictNullChecks": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": [
    "src/**/*",
    "*.config.mjs",
    "*.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".astro",
    ".turbo"
  ]
}