{
  "extends": "@repo/typescript-config/vite.json",
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "strictNullChecks": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "outDir": "dist",
    "rootDir": "."
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.astro",
    "jsx.d.ts",
    "*.config.mjs",
    "*.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".astro",
    ".turbo"
  ]
}