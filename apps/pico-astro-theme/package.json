{
  "name": "@app/pico",
  "type": "module",
  "version": "0.8.1",
  "description": "Astro styled with Pico CSS, build with Astro, shine with Pico",
  "imports": {
    "#*": "./src/*"
  },
  "scripts": {
    "updateAstro": "pnpm dlx @astrojs/upgrade",
    "update": "pnpm update",
    "inspect": "eslint  --inspect-config",
    "dev": "astro dev",
    "start": "astro dev",
    "check": "astro check",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint . --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "fix": "eslint . --fix",
    "check-types": "tsc --noEmit"
  },
  "keywords": [
    "astro",
    "withastro",
    "pico",
    "astro-theme"
  ],
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^3.1.8",
    "@astrojs/react": "^3.6.2",
    "@astrojs/rss": "^4.0.9",
    "@astrojs/sitemap": "^3.2.1",
    "@astrojs/vercel": "^7.8.1",
    "astro": "^4.16.5",
    "astro-icon": "^1.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "eslint": "^9.12.0"
  }
}
