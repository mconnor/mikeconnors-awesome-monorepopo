---
import Andy from '#assets/andy-og.webp';
import Image from 'astro/components/Image.astro';

import { link } from 'fs';

interface Props {
  href: string;
  label: string;
  imagePath: string;
  alt: string;
  bool?: boolean;
}

const { href, label, imagePath, alt, bool } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
  '../assets/*.{jpeg,jpg,png,gif,webp}',
);
console.log(images);

if (!images[imagePath])
  throw new Error(
    `"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif,webp}"`,
  );
---

<div
  class="relative isolate mt-3 flex flex-col items-start rounded-2xl px-6 py-4 hover:shadow-lg"
>
  <Image slot="image" class="w-full" src={images[imagePath]()} alt={alt} />
  <h2 class="text-xl font-bold text-zinc-800">
    <a href={href}>
      <span class:list={['absolute inset-0 z-10', { 'bg-pink-600/25': bool }]}
      ></span>
      <slot name="headline" /></a
    >
  </h2>

  <!-- <span class:list={['absolute inset-0', { 'bg-pink-600/25': bool }]}></span> -->
  <!-- <span class="absolute inset-0 bg-pink-600/25"></span> -->

  <time class="relative order-first text-sm text-gray-600" datetime="2021-08-01"
    >August 1, 2021</time
  >
  <p class="text-base text-gray-700">
    <slot name="description" />
  </p>
  <div class="px-6 pt-4 pb-2">
    <span
      class="mr-2 mb-2 inline-block rounded-full bg-blue-200 px-3 py-1 text-sm font-semibold text-blue-700"
      >Tag1</span
    >
    <span
      class="mr-2 mb-2 inline-block rounded-full bg-blue-200 px-3 py-1 text-sm font-semibold text-blue-700"
      >Tag2</span
    >
    <span
      class="mr-2 mb-2 inline-block rounded-full bg-blue-200 px-3 py-1 text-sm font-semibold text-blue-700"
      >Tag3</span
    >
  </div>
</div>
