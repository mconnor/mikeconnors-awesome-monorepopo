---
// import Box from '@repo/ui-lit/Box';
import Center from '@repo/layout-webcomponents/Center';
import Cover from '@repo/layout-webcomponents/Cover';
import Sidebar from '@repo/layout-webcomponents/Sidebar';

import Header from '#components/Header.astro';
import Footer from '#components/Header.astro';
import Layout from '#layouts/BaseLayout.astro';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'mike connor', description = 'my website' } = Astro.props;
---

<Layout title={title} description={description}>
  <Cover centeredElement="center-l" noPad>
    <Header desc={title} />
    <Center>
      <Sidebar sideWidth="30%">
        <slot name="left" />
        <slot name="right" />
      </Sidebar>
    </Center>
  </Cover>

  <Footer />
</Layout>
