---
import BaseLayout from '#layouts/BaseLayout.astro';
import Header from '#components/Header.astro';
import Footer from '#components/Header.astro';

import Center from '@repo/layout-webcomponents/Center';
import Cover from '@repo/layout-webcomponents/Cover';

interface Props {
  title?: string;
  // eslint-disable-next-line @typescript-eslint/no-explicit-any
  children: any;
}

const { title = 'mike connor' } = Astro.props;
---

<BaseLayout title={title}>
  <Cover centeredElement="center-l" noPad>
    <Header desc={title} />

    <Center max="100%">
      <main><slot /></main>
    </Center>

    <Footer />
  </Cover>
</BaseLayout>
