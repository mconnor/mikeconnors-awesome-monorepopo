{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "outDir": "dist",
    //It would be an error to specify rootDir as core and include as * because it creates a file (helpers.ts) that would need to be emitted outside the outDir (i.e. ../helpers.js).
    "skipLibCheck": true,
    "esModuleInterop": false,
    "experimentalDecorators": true,
    "useDefineForClassFields": false
  },
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist", ".astro", ".turbo", ".vercel"] //exclude only changes which files are included as a result of the include setting.
}
