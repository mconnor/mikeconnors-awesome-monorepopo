---
import Center from '@repo/layout-webcomponents/Center';
import Cover from '@repo/layout-webcomponents/Cover';
import type { RmUnitType } from '@repo/styles/Types';

import Footer from '#components/Footer.astro';
import Header from '#components/Header.astro';
import BaseLayout from '#layouts/BaseLayout.astro';

interface Props {
  title?: string;
  centerWidth?: RmUnitType;
  children: unknown;
}

const { centerWidth = '60ch', title = 'mike connor' } = Astro.props;
---

<BaseLayout title={title}>
  <Cover centeredElement="main" noPad>
    <Header desc={title} />

    <main>
      <Center max={centerWidth}><slot /></Center>
    </main>

    <Footer />
  </Cover>
</BaseLayout>
