{
  "extends": "@repo/typescript-config/astro-base.json",
  "compilerOptions": {
    "experimentalDecorators": true, // default is false for TypeScript 5.0 and up
    "useDefineForClassFields": false, // default is true when "target" is "ES2022" or higher
    "rootDir": ".", //It would be an error to specify rootDir as core and include as * because it creates a file (helpers.ts) that would need to be emitted outside the outDir (i.e. ../helpers.js).
    "jsx": "preserve"
  },
  "files": [".astro/types.d.ts", "jsx.d.ts"],
  "include": ["src/**/*", "*.config.mjs"],
  "exclude": [
    "dist",
    ".astro",
    ".turbo",
    ".vercel",
    ".frontmatter/",
    "cache-directory"
  ] //exclude only changes which files are included as a result of the include setting.
}
