{
  "extends": "@repo/typescript-config/astro-base.json",
  "compilerOptions": {
    "experimentalDecorators": true, // default is false for TypeScript 5.0 and up
    "useDefineForClassFields": false, // default is true when "target" is "ES2022" or higher
    "rootDir": ".",
  },
  "files": [
    ".astro/types.d.ts",
    "jsx.d.ts",
    "src/env.d.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.mts",
    "src/**/*.astro",
    "src/**/*.md",
    "*.config.mjs",
  ],
  "exclude": [
    "dist",
    ".astro",
    ".turbo",
    ".vercel",
    ".frontmatter/",
    "cache-directory"
  ]
}