{
  "extends": "@repo/typescript-config/astro-app.json",
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "experimentalDecorators": true, // default is false for TypeScript 5.0 and up
    "useDefineForClassFields": false, // default is true when "target" is "ES2022" or higher
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "."
  },
  "files": [
    "postcss.config.mjs",
    "eslint.config.mjs",
    "astro.config.mjs"
  ],
  "include": [
    "**/*.d.ts",
    "src",
  ]
}