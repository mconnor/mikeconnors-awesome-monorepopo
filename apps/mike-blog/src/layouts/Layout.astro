---
import Center from '@repo/layout-webcomponents/Center';
import BreadCrumbs from '#components/BreadCrumbs/index.astro';
//  cover causes a flash issue
import Cover from '@repo/layout-webcomponents/Cover';

import type { RmUnitType } from '@repo/layout-webcomponents/Types';
// import Prose from '#components/Prose.astro';
// import Header from '#components/Header/index.astro';
import NavBar from '#components/NavBar/index.astro';

// import Andy from '#assets/andy_mud_color.webp';
// import BgImage from '#components/bg-img/index.astro';
// import Headline from '#components/Headline.astro';
import Footer from '#components/Footer/index.astro';
import BaseLayout from './BaseLayout.astro';

interface Props {
  maxW?: RmUnitType;
  children: unknown;
  title?: string;
  description?: string;
}

const {
  maxW = '60ch',
  title = Astro.url.pathname.slice(1),
  ...rest
} = Astro.props;

const GUTTERS = '1ch'; // padding for the main content area
---

<BaseLayout title={title} {...rest}>
  <!-- <BgImage bgImage={Andy}> -->
  <NavBar transition:persist />
  <BreadCrumbs />
  <!-- <div class={paddClass}><BreadCrumbs /></div> -->
  <Cover centeredElement="center-l" noPad minHeight="100dvh">
    <Center gutters={GUTTERS} max={maxW}>
      <slot />
    </Center>

    <Footer />
  </Cover>

