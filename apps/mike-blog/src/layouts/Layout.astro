---
import Center from '@repo/layout-webcomponents/Center';
import Header from '#components/Header/index.astro';
import Cover from '@repo/layout-webcomponents/Cover';

// import type RmUnitType from '@repo/layout-webcomponents/RmUnitType';
import Footer from '#components/Footer/index.astro';
import BaseLayout from './BaseLayout.astro';
import Stack from '@repo/layout-webcomponents/Stack';
interface Props {
  maxW?: string;
  children: unknown;
  title?: string;
  description?: string;
}

const {
  maxW = '60ch',
  title = Astro.url.pathname.slice(1),
  ...rest
} = Astro.props;
---

<BaseLayout title={title} {...rest}>
  <!-- <NavBar navLinks={navLinksArray} title="x" tabindex={0} client:visible>
   <ThemeSelector  slot="right-button" />
  </NavBar> -->

  <Cover space="2rem" centeredElement="center-l" noPad minHeight="100dvh">
    <Header />
    <Center max={maxW} gutters="1rem">
      <Stack>
        <slot name="layoutHeadline" />
        <slot />
      </Stack>
    </Center>
    <Footer />
  </Cover>
</BaseLayout>
