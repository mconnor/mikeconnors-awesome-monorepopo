---
import Center from '@repo/layout-webcomponents/Center';
import Cover from '@repo/layout-webcomponents/Cover';
import type { RmUnitType } from '@repo/layout-webcomponents/Types';

import Header from '#components/Header/index.astro';
// import Header from '#components/DaisyHeader/index.astro';
import Footer from '#components/Footer/index.astro';
import BaseLayout from './BaseLayout.astro';
import { slide } from 'astro:transitions';
interface Props {
  maxW?: RmUnitType;
  children: unknown;
  title?: string;
  description?: string;
}

const { maxW = 'var(--measure, 60ch)', ...rest } = Astro.props;
---

<BaseLayout {...rest}>
  <Cover centeredElement="center-l" space="0">
    <Header transition:persist />

    <Center max={maxW}>
      <div transition:animate={slide({ duration: '2.4s' })}><slot /></div>
    </Center>

    <!-- <Footer /> -->
  </Cover>
</BaseLayout>
x
