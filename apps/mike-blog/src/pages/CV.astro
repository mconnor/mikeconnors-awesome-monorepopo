---
import { getEntry } from 'astro:content';
import Layout from '#layouts/Layout.astro';
import Prose from '#components/Prose.astro';

// import Carousel from '@repo/astro-ui/Carousel';
// import { Image } from 'astro:assets';
// import Mix from '@repo/astro-ui/Mix';

// import IntMix from '#components/IntMix/index.astro';

import TimeLine from '#components/TimeLine/index.astro';
// import Bushes from '../assets/andyBushes.jpg';
import Headline from '#components/Headline.astro';

const me = await getEntry('authors', 'mike-connor');
---

<Layout title="About">
  <Headline headline="CV" />
  <!-- <Mix /> -->

  <!-- <Avatars /> -->

  <Prose>
    <h2>Professional Summary</h2>
    <p>
      Frontend web and mobile developer with over twenty years of experience
      building web applications and single-page applications for automotive,
      pharmaceutical, entertainment, and advertising industries. Specializes in
      modern development workflows, TypeScript, and scalable monorepo
      architectures. Currently leveraging AI tools to maximize development
      efficiency and code quality.
    </p>
  </Prose>
  <!-- <Cards /> -->
  {me?.data?.timeline && <TimeLine timeline={me.data.timeline} />}
</Layout>

<style>
  @media (orientation: portrait) {
    .frame {
      aspect-ratio: 1 / 1;
    }
  }

  .hue-cycle {
    animation: hue-rotation 4s ease-in-out infinite alternate;
  }

  @keyframes hue-rotation {
    0% {
      filter: hue-rotate(0deg);
    }
    100% {
      filter: hue-rotate(180deg);
    }
  }
</style>
