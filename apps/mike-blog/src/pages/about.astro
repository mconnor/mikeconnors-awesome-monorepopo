---
import { Image } from 'astro:assets';
import Layout from '#layouts/Layout.astro';
import Prose from '#components/Prose.astro';
import TimeLine from '#components/TimeLine/index.astro';
import Frame from '@repo/layout-webcomponents/Frame';
import Stack from '@repo/layout-webcomponents/Stack';
import Andy from '#assets/andy_mud_color.webp';

export const prerender = true;

const timeCapsules = [
  { label: 'Apple Inc. founded', year: 1976, first: true },
  { label: 'iMac', year: 1998 },
  { label: 'iPod', year: 2001 },
  { label: 'iPhone', year: 2007 },
  { label: 'Apple Watch', year: 2015, last: true },
];
---

<Layout title="About">
  <Stack space="var(--s1)">
    <TimeLine items={timeCapsules} />
    <Prose>
      <h1>About Me</h1>
      <p>Software dev, traveller, white water rafting guide, Crossfitter</p>
      <p>
        This is a blog about my adventures in software development, travel, and
        fitness.
      </p>
    </Prose>

    <Frame ratio="1.6180:1">
      <Image
        class="rounded-xl"
        src={Andy}
        sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px`}
        alt="Andy in the mud"
      />
    </Frame>
  </Stack>
</Layout>

<script is:inline>
  document
    .getElementById('secret-sound')
    .addEventListener('click', () =>
      document.getElementById('egg-audio').play(),
    );
</script>
