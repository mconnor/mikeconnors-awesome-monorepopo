---
import { Image } from 'astro:assets';
// import EasterEgg from '@repo/astro-ui/EasterEgg';
import Icon from '#components/Icon.astro';

import { type NavType } from '#schemas/NavSchema.ts';
import Andy from '#assets/headshot.jpg';

import Modal from '#components/Modal/index.astro';
import MailForm from '#components/Mail/index.astro';

interface Props {
  navLinks: NavType[];
}
const { navLinks } = Astro.props;
// const CLIPS = ['/audio/drink.mp3', '/audio why.mp3'];
---

<footer class="footer items-center bg-base-200 p-10 sm:footer-horizontal">
  <aside class="grid-flow-col items-center">
    <div class="avatar w-24">
      <!-- <div class="w-24 rounded-full"> -->
      <Image
        src={Andy}
        class="rounded-full"
        alt="Andy"
        decoding="async"
        loading="lazy"
      />
    </div>

    <Modal id="showModal" cta="Contact Me" btnClass="btn btn-link-content">
      <Fragment slot="body"><MailForm /> </Fragment>
    </Modal>

    <!-- <EasterEgg clips={CLIPS}>
      <wa-icon name="egg" class="text-3xl"></wa-icon></EasterEgg
    > -->

    <!-- <p>
      Copyright Â© {new Date().getFullYear()} - All right reserved
    </p> -->
  </aside>

  <ul class="grid-flow-col gap-4 md:place-self-center md:justify-self-end">
    {
      navLinks.map((nav) => (
        <li class="btn relative btn-ghost btn-xl">
          <a
            href={nav.url}
            class="absolute inset-0 z-10"
            aria-label="Full card link"
          >
            <Icon name={nav.label} family="brands" />
          </a>
        </li>
      ))
    }
  </ul>
</footer>
