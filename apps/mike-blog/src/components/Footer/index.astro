---
type Props = Record<string, never>;
import { Image } from 'astro:assets';
// import EasterEgg from '@repo/astro-ui/EasterEgg';
import Icon from '#components/Icon.astro';
import type { PlatformLinkType } from '#schemas/platforms.ts';
import { OUTBOUND_LINKS } from '#app.config.ts';
import Andy from '#assets/IMG_1278.png';

import Modal from '#components/Modal/index.astro';
import Mail from '#components/Mail/index.astro';

// const CLIPS = ['/audio/drink.mp3', '/audio why.mp3'];
---

<footer
  class="footer items-center bg-neutral p-10 text-neutral-content sm:footer-horizontal"
>
  <aside class="grid-flow-col items-center">
    <div class="avatar">
      <div class="w-24 rounded-full">
        <Image src={Andy} alt="Andy" decoding="async" loading="lazy" />
      </div>
    </div>
    <!-- <EasterEgg clips={CLIPS}>
      <wa-icon name="egg" class="text-3xl"></wa-icon></EasterEgg
    > -->

    <Modal id="showModal" cta="Contact Me" btnClass="btn btn-link btn-lg">
      <Mail slot="body" />
    </Modal>

    <!-- <p>
      Copyright Â© {new Date().getFullYear()} - All right reserved
    </p> -->
  </aside>

  <nav
    class="grid-flow-col gap-4 text-3xl md:place-self-center md:justify-self-end"
  >
    {
      OUTBOUND_LINKS.map(({ platform, url }: PlatformLinkType) => (
        <a href={url} class="">
          <Icon name={platform} family="brands" />
        </a>
      ))
    }
  </nav>
</footer>
