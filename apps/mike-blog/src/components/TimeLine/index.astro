---
import Capsule from './Capsule.astro';

interface Item {
  label: string;
  year: number;
}
interface Props {
  items: Item[];
}

const { items } = Astro.props;
---

<ul class="timeline timeline-vertical md:timeline-horizontal group">
  {
    items.map((item, index) => (
      <Capsule
        label={item.label}
        year={item.year}
        first={index === 0}
        last={index === items.length - 1}
      />
    ))
  }
</ul>
