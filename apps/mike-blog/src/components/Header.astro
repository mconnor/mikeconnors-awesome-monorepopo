---
// import Hamburger from './Hamburger.astro';
import Box from '@repo/layout-webcomponents/Box';
import Cluster from '@repo/layout-webcomponents/Cluster';
import ThemeSwitcher from '@repo/ui-lit/ThemeSwitcher';
import { MAIN_MENU } from '#config';
// import { generateSlug , capitalize} from '#lib/index.ts';

// import AstroNavigateSelect from '#components/AstroNavigateSelect.astro';
import HeaderLink from '#components/HeaderLink.astro';
---

<Box invert padding="var(--s1)" borderWidth="0">
  <!-- <Hamburger /> -->

  <ThemeSwitcher />
  <Cluster align="baseline" justify="space-between" space="0">
    <HeaderLink href="/"><h1>Mike Connor - Tech</h1></HeaderLink>

    <!-- <AstroNavigateSelect /> -->

    <Box borderWidth="0" padding="0">
      <Cluster align="baseline" justify="flex-end" space="var(--s1)">

       {
       MAIN_MENU.items.map(({url, title}) => (
          <HeaderLink href={url}>{title}</HeaderLink>
       ))
        }

      </Cluster>
    </Box>
  </Cluster>
</Box>
