---
import Icon from '#components/Icon.astro';
interface Props {
  tags: string[];
  tagCounts: Record<string, number>;
}

const { tagCounts } = Astro.props;
---

<ul class="inline-flex flex-row flex-wrap gap-4">
  {
    // If tagCounts is not defined, we can skip rendering tags
    !tagCounts && <p>No tags available</p>
  }
  {
    tagCounts &&
      Object.entries(tagCounts).map(([tag, count]) => {
        const url = `/tags/${tag}`;
        return (
          <li>
            <a href={url} class="badge badge-xl badge-info">
              <Icon name="tag" />
              {tag}: {count}
            </a>
          </li>
        );
      })
  }
</ul>
