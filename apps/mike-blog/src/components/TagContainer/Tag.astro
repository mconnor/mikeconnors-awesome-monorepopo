---
// import Icon from '@repo/layout-webcomponents/Icon';
// import IconLink from '@repo/astro-ui/IconLink';
interface Props {
  tag: string;
  count: number;
  del: number;
  /** Index of tag for staggered animation delay */
  index?: number;
}
const { tag, count, index = 0 } = Astro.props;

// Use the actual Unicode character (U+E478)
const copy = `${tag}: ${count}`;
// Calculate animation delay based on index (100ms per tag)
const animationDelay = `${index * 100}ms`;
---

<div
  class="animate-fadeIn badge badge-xl opacity-0"
  style={`animation-delay: ${animationDelay}; animation-fill-mode: forwards;`}
>
  <i class="ph ph-tag"></i>
  <span>{copy}</span>
</div>
