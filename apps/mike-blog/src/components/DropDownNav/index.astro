---
import { navLinks } from '#app.config.ts';
---

<wa-dropdown>
  <wa-button appearance="plain" variant="neutral" slot="trigger">
    <wa-icon name="hamburger"></wa-icon>
  </wa-button>
  <wa-menu hoist style="max-width: 200px;">
    <wa-menu>
      {
        navLinks.map(({ href, label }) => (
          <wa-menu-item>
            <wa-button appearance="plain" variant="neutral" href={href}>
              {label}
            </wa-button>
          </wa-menu-item>
        ))
      }
    </wa-menu>
  </wa-menu>
</wa-dropdown>
