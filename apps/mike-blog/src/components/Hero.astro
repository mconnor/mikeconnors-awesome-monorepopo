---
import FeatureCheckBox from './FeatureCheckBox.astro';
---

<section class="hero block-wrap">
  <header>
    <div class="subhead">
      <h1><div class="dark">Mike Connor</div></h1>
      <h1><span>Tech</span> <span>Ops</span></h1>
    </div>

    <!-- <div>
      <FeatureCheckBox delay="880ms"
        >Expertly crafted web design tokens</FeatureCheckBox
      >
      <br />
      <FeatureCheckBox delay="1ms"
        >Expertly crafted web design tokens</FeatureCheckBox
      >
      <br />
      <FeatureCheckBox>Expertly crafted web design tokens</FeatureCheckBox>
    </div> -->
  </header>
</section>

<style>
  .hero .subhead > h1 {
    overflow: clip;
    font-size: var(--font-size-5);

    @media (--xs-n-above) {
      font-size: var(--font-size-6);
    }
    @media (--sm-n-above) {
      font-size: var(--font-size-7);
    }
    @media (--md-n-above) {
      font-size: var(--font-size-fluid-3);
    }

    & > * {
      background: var(--gradient-1) fixed;
      background-size: var(--size-relative-13) var(--size-relative-11);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;

      > [data-theme='dark'] & {
        background: var(--gradient-4) fixed;
        background-size: var(--size-relative-13) var(--size-relative-11);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }
    }

    @media (--motionOK) {
      & > * {
        opacity: 0;
        animation:
          var(--animation-fade-in) forwards,
          var(--animation-slide-in-up) forwards;
        animation-timing-function: var(--ease-out-5);
        animation-delay: 0.5s;
      }

      & > span {
        display: inline-block;
        animation-timing-function: var(--ease-out-5);
      }

      &:last-of-type > span:first-child {
        animation-delay: 0.6s;
      }

      &:last-of-type > span:last-child {
        animation-delay: 0.7s;
      }
    }
  }
</style>
