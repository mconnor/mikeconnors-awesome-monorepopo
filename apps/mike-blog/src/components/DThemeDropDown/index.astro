---
import { daisyuiThemes } from '#utils/daisyui-themes.ts';

import Widget from '#assets/svgs/DropDownWidget.svg';
---

<button class="link" popovertarget="popover-1" style="anchor-name:--anchor-1">
  Theme
  <Widget />
</button>
<ul
  class="menu dropdown w-52 rounded-box bg-base-100 shadow-sm"
  popover
  id="popover-1"
  style="position-anchor:--anchor-1"
>
  {
    daisyuiThemes.map((theme) => (
      <li>
        <label class="label flex cursor-pointer justify-between">
          <span class="label-text capitalize">{theme}</span>
          <input
            type="radio"
            name="theme-dropdown"
            class="theme-controller radio radio-sm"
            value={theme}
            data-set-theme={theme}
          />
        </label>
      </li>
    ))
  }
</ul>
