---
interface Props {
  id?: string;
  cta?: string;
  headline?: string;
  children: unknown;
  closeText?: string;
  class?: string;
  btnClass?: string;
}

const {
  id = 'my_modal_1',
  cta = 'open modal',

  closeText = 'close',
  btnClass = 'btn btn-accent',
} = Astro.props;

const clickFunc = id + '.showModal()';

