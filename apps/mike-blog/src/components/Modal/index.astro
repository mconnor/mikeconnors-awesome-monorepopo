---

<!-- daiseyui Open the modal using ID.showModal() method --><!-- <div data-theme="dark"> -->
<button class={btnClass} onclick={clickFunc}>{cta}</button>
<dialog id={id} class="modal" data-theme="dark">
  <div class="modal-box">
    <p class="py-4"><slot name="body" /></p>
    <div class="modal-action">
      <form method="dialog">
        <!-- if there is a button in form, it will close the modal -->
        <button class="btn">{closeText}</button>
      </form>
    </div>
  </div>
</dialog>
