---
import Hamburger from './Hamburger.astro';
import Bell from './Bell.astro';
import { navLinks, OUTBOUND_LINKS } from '#app.config.ts';
---

<div class="navbar bg-base-100 shadow-sm">
  <div class="navbar-start">
    <div class="dropdown">
      <div tabindex="0" role="button" class="btn btn-ghost">
        <Hamburger />
      </div>
      <ul
        tabindex="0"
        class="dropdown-content menu z-1 mt-3 w-52 menu-sm rounded-box bg-base-100 p-2 shadow"
      >
        {
          navLinks.map(({ href, label }) => (
            <li>
              <a role="button" class="link" href={href}>
                {label}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
  <div class="navbar-center">
    <a class="btn text-xl btn-ghost">daisyUI</a>
  </div>
  <div class="navbar-end">
    <button class="btn btn-circle btn-ghost">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
      </svg>
    </button>
    <button class="btn btn-circle btn-ghost">
      <div class="indicator">
        <Bell />
        <!-- <span class="indicator-item badge badge-xs badge-primary"></span> -->
      </div>
    </button>
  </div>
</div>
