{
  "name": "@app/blog",
  "version": "1.0.0",
  "type": "module",
  "author": "Mike Connor",
  "imports": {
    "#*": "./src/*",
    "#config": "./src/config.mts"
  },
  "keywords": [
    "astro",
    "lit",
    "blog",
    "tags",
    "zod"
  ],
  "scripts": {
    "updateAstro": "pnpm dlx @astrojs/upgrade",
    "update": "pnpm update",
    "spell-check": "cspell --no-summary --no-progress --no-colors --config cspell.json \"**/*.{md,mts,ts,tsx}\"",
    "dev": "astro dev",
    "start": "astro dev",
    "check": "astro check",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint . --max-warnings 0",
    "lint:json": "eslint . -c jsonLint.config.mjs",
    "inspect:json": "eslint . -c jsonLint.config.mjs --inspect-config",
    "inspect": "eslint . --inspect-config",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "fix": "eslint . --fix",
    "check-types": "tsc --noEmit",
    "toolBarOn": "astro preferences disable devToolbar",
    "toolBarOff": "astro preferences enable devToolbar",
    "sync": "astro sync",
    "host": "astro dev --host",
    "force": " astro build -- --force",
    "sentry-build": "astro check && astro build && pnpm sentry:sourcemaps",
    "vdeploy": "vercel deploy --prebuilt",
    "devbuild": "astro check && astro build development",
    "test": "vitest run",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org mike-connor --project astro-openprops-blog-w-tags ./dist && sentry-cli sourcemaps upload --org mike-connor --project astro-openprops-blog-w-tags ./dist"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/lit": "^4.3.0",
    "@astrojs/mdx": "^3.1.8",
    "@astrojs/rss": "^4.0.9",
    "@astrojs/vercel": "^7.8.1",
    "@iconify-json/mdi": "^1.2.1",
    "@repo/layout-webcomponents": "workspace:*",
    "@repo/styles": "workspace:*",
    "@repo/ui-lit": "workspace:*",
    "@sentry/astro": "^8.34.0",
    "@sentry/browser": "^8.34.0",
    "@sentry/cli": "^2.37.0",
    "@sentry/vite-plugin": "^2.22.5",
    "astro": "^4.16.5",
    "astro-icon": "^1.1.1",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "lit": "^3.2.1",
    "open-props": "^1.7.7",
    "sanitize-html": "^2.13.1",
    "sharp": "^0.33.5",
    "vitest": "^2.1.3"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@webcomponents/template-shadowroot": "^0.2.1",
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.6",
    "eslint": "^9.12.0",
    "postcss": "^8.4.47",
    "postcss-custom-media": "^11.0.3",
    "postcss-html": "^1.7.0",
    "postcss-import": "^16.1.0",
    "postcss-jit-props": "^1.0.14",
    "postcss-nesting": "^13.0.0",
    "postcss-pow": "^1.0.1",
    "vite": "^5.4.9"
  }
}
