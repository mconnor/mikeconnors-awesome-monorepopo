{
  "name": "@app/blog",
  "version": "1.0.0",
  "type": "module",
  "author": "Mike Connor",
  "imports": {
    "#*": "./src/*"
  },
  "keywords": [
    "astro",
    "lit",
    "blog",
    "tags",
    "zod"
