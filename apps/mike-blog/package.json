{
  "name": "@app/blog",
  "version": "1.0.0",
  "type": "module",
  "author": "Mike Connor",
  "imports": {
    "#*": "./src/*"
  },
  "keywords": [
    "astro",
    "lit",
    "blog",
    "tags",
    "zod"
  ],
  "scripts": {
    "spell-check": "cspell --no-summary --no-progress --no-colors --config cspell.json \"**/*.{md,mts,ts,tsx}\"",
    "dev": "astro dev",
    "astro-check": "astro check",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "prettier . --write",
    "lint": "eslint . --max-warnings 0",
    "lint:json": "eslint . -c jsonLint.config.mjs",
    "inspect:json": "eslint . -c jsonLint.config.mjs --inspect-config",
    "inspect": "eslint . --inspect-config",
    "fix": "eslint . --fix",
    "check-types": "tsc --noEmit",
    "toolBarOn": "astro preferences disable devToolbar",
    "toolBarOff": "astro preferences enable devToolbar",
    "sync": "astro sync",
    "host": "astro dev --host",
    "force": " astro build -- --force",
    "sentry-build": "astro check && astro build && pnpm sentry:sourcemaps",
    "vdeploy": "vercel deploy --prebuilt",
    "devbuild": "astro check && astro build development",
    "test": "vitest run",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org mike-connor --project astro-openprops-blog-w-tags ./dist && sentry-cli sourcemaps upload --org mike-connor --project astro-openprops-blog-w-tags ./dist"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "4.0.0-beta.3",
    "@astrojs/rss": "^4.0.9",
    "@astrojs/vercel": "8.0.0-beta.3",
    "@repo/layout-webcomponents": "workspace:*",
    "@repo/styles": "workspace:*",
    "@repo/ui-lit": "workspace:*",
    "@sentry/astro": "^8.38.0",
    "@sentry/browser": "^8.38.0",
    "@sentry/cli": "^2.38.2",
    "@sentry/vite-plugin": "^2.22.6",
    "astro": "5.0.0-beta.7",
    "astro-icon": "^1.1.2",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "lit": "^3.2.1",
    "open-props": "catalog:",
    "sanitize-html": "^2.13.1",
    "sharp": "^0.33.5",
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "@iconify-json/mdi": "^1.2.1",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@webcomponents/template-shadowroot": "^0.2.1",
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.6",
    "eslint": "^9.14.0",
    "postcss": "^8.4.49",
    "postcss-custom-media": "^11.0.5",
    "postcss-html": "^1.7.0",
    "postcss-import": "^16.1.0",
    "postcss-jit-props": "^1.0.14",
    "postcss-nesting": "^13.0.1",
    "postcss-pow": "^1.0.1",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "stylelint": "^16.10.0",
    "typescript": "^5.6.3"
  }
}
