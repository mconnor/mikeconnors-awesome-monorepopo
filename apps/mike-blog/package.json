{
  "name": "@app/blog",
  "version": "1.0.0",
  "type": "module",
  "author": "Mike Connor",
  "imports": {
    "#*": "./src/*"
  },
  "keywords": [
    "astro",
    "blog",
    "tags"
  ],
  "scripts": {
    "clean": "rm -rf dist && echo 'Done.'",
    "spell-check": "cspell --no-summary --no-progress --no-colors --config cspell.json \"**/*.{md,mts,ts,tsx}\"",
    "dev": "astro dev",
    "astro-check": "astro check",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "prettier . --write",
    "lint": "eslint .",
    "help": "astro -- --help",
    "inspect": "pnpm dlx @eslint/config-inspector@latest",
    "fix": "eslint . --fix",
    "check-types": "tsc --noEmit",
    "toolBarOn": "astro preferences disable devToolbar",
    "toolBarOff": "astro preferences enable devToolbar",
    "sync": "astro sync",
    "host": "astro dev --host",
    "force": " astro build -- --force",
    "sentry-build": "astro check && astro build && pnpm sentry:sourcemaps",
    "vdeploy": "vercel deploy --prebuilt",
    "devbuild": "astro check && astro build development",
    "test": "vitest run",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org mike-connor --project astro-openprops-blog-w-tags ./dist && sentry-cli sourcemaps upload --org mike-connor --project astro-openprops-blog-w-tags ./dist"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^4.2.3",
    "@astrojs/preact": "^4.0.8",
    "@astrojs/rss": "^4.0.11",
    "@astrojs/vercel": "^8.1.3",
    "@repo/astro-wc": "workspace:*",
    "@repo/layout-webcomponents": "workspace:*",
    "@repo/react": "workspace:*",
    "@repo/styles": "workspace:*",
    "@sentry/astro": "^8.55.0",
    "@sentry/browser": "^8.55.0",
    "@sentry/cli": "^2.43.0",
    "@sentry/vite-plugin": "^3.2.4",
    "@std/toml": "npm:@jsr/std__toml@^1.0.3",
    "@tailwindcss/vite": "^4.1.2",
    "astro": "catalog:",
    "astro-icon": "^1.1.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "open-props": "^1.7.14",
    "preact": "^10.26.4",
    "sanitize-html": "^2.15.0",
    "sharp": "^0.33.5",
    "tailwindcss": "catalog:"
  },
  "devDependencies": {
    "@iconify-json/mdi": "^1.2.3",
    "@repo/eslint-config": "workspace:^",
    "@repo/typescript-config": "workspace:^",
    "@tailwindcss/postcss": "^4.1.2",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "catalog:",
    "@webcomponents/template-shadowroot": "^0.2.1",
    "cssnano": "^7.0.6",
    "eslint": "catalog:",
    "prettier-plugin-astro": "^0.14.1",
    "typescript": "^5.8.2",
    "zod-validation-error": "^3.4.0"
  }
}
