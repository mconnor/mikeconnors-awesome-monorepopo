{
  "name": "@app/blog",
  "version": "1.0.0",
  "type": "module",
  "author": "Mike Connor",
  "imports": {
    "#*": "./src/*",
    "#config": "./src/config.mts"
  },
  "keywords": [
    "astro",
    "lit",
    "blog",
    "tags",
    "zod"
  ],
  "scripts": {
    "spell-check": "cspell --no-summary --no-progress --no-colors --config cspell.json \"**/*.{md,mts,ts,tsx}\"",
    "dev": "astro dev",
    "astro-check": "astro check",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "prettier . --write",
    "lint": "eslint . --max-warnings 0",
    "lint:json": "eslint . -c jsonLint.config.mjs",
    "inspect:json": "eslint . -c jsonLint.config.mjs --inspect-config",
    "inspect": "eslint . --inspect-config",
    "fix": "eslint . --fix",
    "check-types": "tsc --noEmit",
    "toolBarOn": "astro preferences disable devToolbar",
    "toolBarOff": "astro preferences enable devToolbar",
    "sync": "astro sync",
    "host": "astro dev --host",
    "force": " astro build -- --force",
    "sentry-build": "astro check && astro build && pnpm sentry:sourcemaps",
    "vdeploy": "vercel deploy --prebuilt",
    "devbuild": "astro check && astro build development",
    "test": "vitest run",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org mike-connor --project astro-openprops-blog-w-tags ./dist && sentry-cli sourcemaps upload --org mike-connor --project astro-openprops-blog-w-tags ./dist"
  },
  "dependencies": {
    "@astrojs/check": "catalog:",
    "@astrojs/lit": "catalog:",
    "@astrojs/mdx": "catalog:",
    "@astrojs/rss": "catalog:",
    "@astrojs/vercel": "catalog:",
    "@repo/layout-webcomponents": "workspace:*",
    "@repo/styles": "workspace:*",
    "@repo/ui-lit": "workspace:*",
    "@sentry/astro": "^8.37.1",
    "@sentry/browser": "^8.37.1",
    "@sentry/cli": "^2.38.2",
    "@sentry/vite-plugin": "^2.22.6",
    "astro": "^4.16.10",
    "astro-icon": "^1.1.2",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "lit": "catalog:",
    "open-props": "catalog:",
    "sharp": "catalog:",
    "vitest": "catalog:"
  },
  "devDependencies": {
    "@iconify-json/mdi": "catalog:",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.9.0",
    "@types/postcss-import": "^14.0.3",
    "@webcomponents/template-shadowroot": "catalog:",
    "autoprefixer": "catalog:",
    "cssnano": "catalog:",
    "eslint": "catalog:",
    "postcss": "catalog:",
    "postcss-custom-media": "catalog:",
    "postcss-html": "catalog:",
    "postcss-import": "catalog:",
    "postcss-jit-props": "catalog:",
    "postcss-nesting": "catalog:",
    "postcss-pow": "catalog:",
    "prettier": "catalog:",
    "prettier-plugin-astro": "catalog:",
    "stylelint": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-plugin-stylelint": "6.0.0-beta.1"
  }
}