{
  "name": "@app/simple-blog-beta5",
  "type": "module",
  "version": "0.0.1",
  "author": "Mike Connor",
  "imports": {
    "#*": "./src/*"
  },
  "scripts": {
    "spell-check": "cspell --no-summary --no-progress --no-colors --config cspell.json \"**/*.{md,mts,ts,tsx}\"",
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "prettier . --write",
    "lint": "eslint . --max-warnings 0",
    "inspect": "eslint . --inspect-config",
    "fix": "eslint . --fix",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@astrojs/mdx": "catalog:",
    "@astrojs/rss": "catalog:",
    "@astrojs/sitemap": "catalog:",
    "@astrojs/vercel": "catalog:",
    "@repo/styles": "workspace:*",
    "astro": "catalog:",
    "lit": "catalog:"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/postcss-config": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "prettier": {
    "singleQuote": true,
    "experimentalTernaries": true,
    "proseWrap": "always"
  }
}
