{
  "name": "@app/simple-blog-beta5",
  "type": "module",
  "version": "0.0.1",
  "author": "Mike Connor",
  "imports": {
    "#*": "./src/*"
  },
  "scripts": {
    "spell-check": "cspell --no-summary --no-progress --no-colors --config cspell.json \"**/*.{md,mts,ts,tsx}\"",
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "prettier . --write",
    "lint": "eslint . --max-warnings 0",
    "lint:json": "eslint . -c jsonLint.config.mjs",
    "inspect:json": "eslint . -c jsonLint.config.mjs --inspect-config",
    "inspect": "eslint . --inspect-config",
    "fix": "eslint . --fix",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@repo/ui-lit": "workspace:*",
    "@astrojs/mdx": "4.0.0-beta.3",
    "@astrojs/rss": "catalog:",
    "@astrojs/sitemap": "catalog:",
    "@astrojs/vercel": "8.0.0-beta.3",
    "astro": "5.0.0-beta.7"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "prettier-plugin-astro": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
