---
import { BoxClass } from './box-l';
import type { RmUnitType, BorderStyle } from '@repo/styles/Types';

interface Props {
  padding?: RmUnitType;
  borderWidth?: RmUnitType;
  highlight?: boolean;
  borderStyle?: BorderStyle;
  invert?: boolean;
}
const props = Astro.props;
---

<div>
  <BoxClass {...props} client:visible>
    <slot />
  </BoxClass>
</div>

<style>
  box-l {
    --box-text-color: var(--theme-primary);
    --box-background-color: var(--theme-secondary);
    --box-font-family: var(--theme-font-family);
  }
  .warning {
    --box-l-text-color: var(--theme-warning);
  }
</style>
