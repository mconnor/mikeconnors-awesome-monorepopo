---
import './Reel.css';
import type { RmUnitType } from '../index.ts';

interface Props {
  itemWidth?: 'auto' | RmUnitType; //"250px"
  space?: RmUnitType; //"var(--s1)"
  height?: 'auto' | RmUnitType; //"var(--s1)"
  noBar?: boolean;
  children: unknown;
}

const { itemWidth, space, height, noBar } = Astro.props;
---

<script src="./Reel.js"></script>
<reel-l itemWidth={itemWidth} space={space} height={height} noBar={noBar}>
  <slot />
</reel-l>
