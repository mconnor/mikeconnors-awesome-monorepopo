---
// import { link } from 'fs';
import Frame from '#ed-layouts/Frame/index.astro';
import Tag from './Tag.astro';

interface Props {
  href: string;
  label: string;

  showInset?: boolean;
  date?: string;
}

const { href, label, showInset } = Astro.props;
---

<div
  class="relative flex flex-col items-start rounded-2xl px-6 py-4 hover:shadow-lg"
>
  <!-- <Frame ratio="4:3"><slot name="image" /></Frame> -->

  <a href={href}>
    <span
      class:list={['absolute inset-0 z-10', { 'bg-pink-600/25': showInset }]}
    ></span>
    <span class="text-4xl">
      <slot name="headline" />
    </span>
  </a>

  <!-- <Tag class:list={['absolute inset-0', { 'bg-pink-600/25': bool }]}></Tag> -->
  <!-- <Tag class="absolute inset-0 bg-pink-600/25"></Tag> -->

  <time class="relative order-first text-sm text-gray-600" datetime="2021-08-01"
    >August 1, 2021</time
  >
  <p class="text-base text-gray-700">
    <slot name="description" />
  </p>
  <div class="px-6 pt-4 pb-2">
    <Tag>Tag1</Tag>
    <Tag>Tag2</Tag>
    <Tag>Tag3</Tag>
  </div>
</div>
