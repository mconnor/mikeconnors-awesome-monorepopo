---
import './Cluster.css';

import type {
  AlignItemsTypes,
  JustifyContentTypes,
  RmUnitType,
} from '../index.ts';

interface Props {
  justify?: JustifyContentTypes; //"flex-start"
  align?: AlignItemsTypes; // "flex-start"
  space?: RmUnitType;
}

const {
  justify = 'flex-start',
  align = 'flex-start',
  space = 'var(--s1)',
} = Astro.props;
---

<script src="./Cluster.js"></script>

<cluster-l justify={justify} align={align} space={space}>
  <slot />
</cluster-l>
