{
  "name": "@repo/vitest-config",
  "type": "module",
  "imports": {
    "#*": "./src/*"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    },
    "./base": {
      "types": "./dist/configs/base-config.d.ts",
      "import": "./dist/configs/base-config.mjs"
    },
    "./ui": {
      "types": "./dist/configs/ui-config.d.ts",
      "import": "./dist/configs/ui-config.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "collect-json-reports": "node dist/scripts/collect-json-outputs.js",
    "merge-json-reports": "nyc merge coverage/raw coverage/merged/merged-coverage.json",
    "report": "nyc report -t coverage/merged --report-dir coverage/report --reporter=html --exclude-after-remap false",
    "view-report": "open coverage/report/index.html"
  },
  "dependencies": {
    "vitest": "catalog:"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@vitest/coverage-istanbul": "catalog:",
    "@vitest/ui": "catalog:",
    "glob": "catalog:",
    "jsdom": "catalog:",
    "nyc": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:"
  }
}
