{
  "name": "@repo/ui-astro",
  "type": "module",
  "version": "0.0.1",
  "imports": {
    "#*": "./src/*"
  },
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "update": "pnpm update",
    "lint": "eslint",
    "fix": "eslint --fix",
    "inspect": "eslint  --inspect-config",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check-types": "tsc --noEmit",
    "clean": "find ./src -type f ( -name \"*.d.ts\" -o -name \"*.d.ts.map\" -o -name \"*.js\" ) -delete"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.2",
    "astro": "^4.13.1",
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "eslint": "^9.9.0",
    "@repo/eslint-config": "workspace:^1.0.4",
    "@repo/typescript-config": "workspace:*"
  }
}
