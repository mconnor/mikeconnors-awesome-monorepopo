{
  "extends": "@repo/typescript-config/myAstro.json",
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "experimentalDecorators": true, // default is false for TypeScript 5.0 and up
    "useDefineForClassFields": false, // default is true when "target" is "ES2022" or higher
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src", "eslint.config.js"],
  "exclude": [
    "node_modules",
    ".turbo",
    ".vercel",
    ".astro",
    "dist",
    ".turbo",
    "build"
  ]
}
