{
  "name": "@repo/svelte",
  "version": "1.0.0",
  "description": "svelte ui",
  "type": "module",
  "imports": {
    "#*": "./src/*"
  },
  "exports": {
    "./Counter": "./src/SvelteCounter.svelte",
    "./card": "./src/Card.svelte",
    "./feedback-form": "./src/FeedbackFrom.svelte"
  },
  "scripts": {
    "lint": "eslint --max-warnings=0",
    "fix": "eslint . --fix",
    "format": "prettier --write .",
    "inspect": "eslint --inspect-config",
    "svelte-check": "svelte-check",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@repo/design-system": "workspace:*",
    "@repo/layout-webcomponents": "workspace:*"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:^",
    "@repo/typescript-config": "workspace:^",
    "eslint": "catalog:",
    "prettier-plugin-svelte": "catalog:svelte5",
    "svelte": "catalog:svelte5",
    "svelte-check": "catalog:svelte5",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "svelte": ">=5"
  },
  "keywords": [
    "svelte",
    "ui"
  ],
  "author": "",
  "license": "ISC"
}
