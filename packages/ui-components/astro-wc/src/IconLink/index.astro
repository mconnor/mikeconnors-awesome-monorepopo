---
import Icon from '../Icon/index.astro';

import type { ComponentProps } from 'astro/types';

type IconThemeProps = ComponentProps<typeof Icon>;

// type Props = HTMLAttributes<'a'> & {
//   size?: string;
//   color?: string;
//   iconKey: IconType;
//   gradient?: boolean;
// };

interface Props extends IconThemeProps {
  href: string;
  class?: string;
}

const {
  // color = 'var(--color-primary-200)',
  // size = 'var(--s2)',
  href,

  color = 'var(--color-primary-200)',
  ...rest
} = Astro.props;
---

<link-icon>
  <div>
    <a href={href}><Icon color={color} {...rest} /></a>
  </div>
</link-icon>

<script>
  class LinkIcon extends HTMLElement {
    connectedCallback() {}
  }

  customElements.define('link-icon', LinkIcon);
</script>
