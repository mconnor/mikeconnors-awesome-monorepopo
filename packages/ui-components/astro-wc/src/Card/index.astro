---
// import { link } from 'fs';
import Frame from '@repo/layout-webcomponents/Frame';
import Tag from './Tag.astro';

interface Props {
  href: string;
  label: string;

  showInset?: boolean;
  date?: string;
}

const { href, label, showInset } = Astro.props;
---

<div
  class="relative isolate mt-3 flex flex-col items-start rounded-2xl px-6 py-4 hover:shadow-lg"
>
  <Frame ration="4:3"><slot name="image" /></Frame>

  <h2 class="text-xl font-bold text-zinc-800">
    <a href={href}>
      <span
        class:list={['absolute inset-0 z-10', { 'bg-pink-600/25': showInset }]}
      ></span>
      <span class="line-clamp-1">
        <slot name="headline" />
      </span>
    </a>
  </h2>

  <!-- <Tag class:list={['absolute inset-0', { 'bg-pink-600/25': bool }]}></Tag> -->
  <!-- <Tag class="absolute inset-0 bg-pink-600/25"></Tag> -->

  <time class="relative order-first text-sm text-gray-600" datetime="2021-08-01"
    >August 1, 2021</time
  >
  <p class="text-base text-gray-700">
    <slot name="description" />
  </p>
  <div class="px-6 pt-4 pb-2">
    <Tag>Tag1</Tag>
    <Tag>Tag2</Tag>
    <Tag>Tag3</Tag>
  </div>
</div>
