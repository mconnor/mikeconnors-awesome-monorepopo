{
  "name": "@repo/astro-wc",
  "version": "0.0.2",
  "description": "",
  "type": "module",
  "imports": {
    "#*": "./src/*"
  },
  "exports": {
    "./styles.css": "./dist/index.css",
    "./*": "./src/*/index.astro",
    "./swatches/*": "./src/swatches/*.astro",
    "./Card": "./src/Card/index.astro",
    "./ContactCard": "./src/ContactCard/index.astro",
    "./IconLink": "./src/IconLink/index.astro",
    "./AstroForm": "./src/AstroForm/index.astro",
    "./Icon": "./src/Icon/index.astro",
    "./DynamicCarousel": "./src/wa/DynamicCarousel/index.astro",
    "./ThemeIcon": "./src/ThemeIcon/index.astro"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npx @tailwindcss/cli -i ./src/styles.css -o ./dist/index.css",
    "dev": "npx @tailwindcss/cli -i ./src/styles.css -o ./dist/index.css  --watch",
    "astro-check": "astro check",
    "test": "echo 'no tests yet'",
    "format": "prettier . --write",
    "lint": "eslint .",
    "fix": "eslint . --fix",
    "inspect": "pnpm dlx @eslint/config-inspector@latest",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@repo/design-system": "workspace:^",
    "@tailwindcss/cli": "catalog:",
    "@tailwindcss/vite": "catalog:",
    "tailwindcss": "catalog:",
    "date-fns": "catalog:"
  },
  "devDependencies": {
    "daisyui": "catalog:",
    "@astrojs/check": "catalog:",
    "@open-wc/testing": "catalog:",
    "@repo/eslint-config": "workspace:^",
    "@repo/typescript-config": "workspace:^",
    "astro": "catalog:",
    "eslint": "catalog:",
    "luxon": "catalog:",
    "prettier-plugin-astro": "catalog:",
    "prettier-plugin-tailwindcss": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:"
  },
  "peerDependencies": {
    "astro": ">=5"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
