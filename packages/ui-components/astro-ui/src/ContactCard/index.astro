---
interface Props {
  name: string;
  job?: string;
  msg?: string;
}

const { name, job = 'strategist', msg = 'add msg' } = Astro.props as Props;
---

<div
  class="flex flex-col gap-2 rounded-lg p-8 shadow-2xl sm:flex-row sm:items-center sm:gap-6 sm:py-4"
>
  <slot name="contact-img" />

  <div class="space-y-2 text-center sm:text-left">
    <div class="space-y-0.5">
      <p class="text-lg font-semibold text-black">{name}</p>
      <p class="font-medium text-gray-500">{job}</p>
    </div>
    <button
      class="border-accent-200 text-accent-600 hover:border-transparent hover:bg-accent-600 hover:text-white active:bg-accent-700"
    >
      {msg}
    </button>
  </div>
</div>
