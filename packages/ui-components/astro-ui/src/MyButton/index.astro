---
interface Props {
  status?: 'primary' | 'secondary' | 'accent';
  children?: unknown;
}

const { status = 'accent' } = Astro.props;

const colorVariants = {
  primary: 'btn btn-primary',
  secondary: 'btn btn-secondary',
  accent: 'btn btn-accent',
};
---

<button class={colorVariants[status]}>
  <slot />
</button>
