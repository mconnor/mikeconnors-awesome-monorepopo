---

interface Props {
  cta?: string;
  title?: string;
  copy: string;
  size?: 'xs' | 'sm' | 'md' | 'lg' | 'xl';
}

const {
  cta = 'Buy Now',
  title = 'title',
  size = 'xs',
  copy,
} = Astro.props as Props;

const cardSize = 'card-' + size;

// class:list will work

// const cardVariants = {
