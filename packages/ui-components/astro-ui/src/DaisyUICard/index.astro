//     sm: "card w-96 bg-base-100 card-sm shadow-sm",
//     md: "card w-96 bg-base-100 card-md shadow-sm",
//     lg: "card w-96 bg-base-100 card-lg shadow-sm",
//     xl: "card w-96 bg-base-100 card-xl shadow-sm",
//   };
---

<div class:list={['card w-96 bg-base-100 shadow-sm', { cardSize }]}>
  <!-- <div class={cardVariants[size]}> -->
  <div class="card-body">
    <h2 class="card-title">{title}</h2>
    <p>
      xx {copy}
    </p>

    <div class="card-actions justify-end">
      <button class="btn btn-primary">Buy Now</button>
    </div>
  </div>
</div>
