---
// import { cn } from '@repo/utils/cn';
interface Props {
  cta?: string;
  title?: string;
  copy: string;
  size?: 'xs' | 'sm' | 'md' | 'lg' | 'xl';
}

const {
  cta = 'Buy Now',
  title = 'title',
  size = 'xs',
  copy,
} = Astro.props as Props;

const cardSize = 'card-' + size;
---

<div class:list={['card w-96 bg-base-100 shadow-sm', cardSize]}>
  <div class="card-body">
    <h2 class="card-title">{title}</h2>
    <p>
      {copy}
    </p>

    <div class="card-actions justify-end">
      <button class="btn btn-primary">{cta}</button>
    </div>
  </div>
</div>
