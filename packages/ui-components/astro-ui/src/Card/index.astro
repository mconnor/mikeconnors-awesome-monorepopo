---
interface Props {
  label: string;
  href: string;
  showInset?: boolean;
  date?: Date;
  tags?: string[];
}

const { href, showInset, tags, date } = Astro.props;
---

<div
  class="relative isolate mt-3 flex flex-col items-start rounded-2xl px-6 py-4 hover:shadow-lg"
>
  <!-- <Frame ration="4:3"><slot name="image" /></Frame> -->
  <div class="aspect-auto border-4"><slot name="card-img" /></div>
  <h2 class="text-xl font-bold text-zinc-800">
    <a href={href}>
      <span
        class:list={['absolute inset-0 z-10', { 'bg-pink-600/25': showInset }]}
      ></span>

      <div class="line-clamp-1">
        <slot name="headline" />
      </div>
    </a>
  </h2>

  <time
    class="relative order-first border-1 text-sm text-gray-600"
    datetime="2021-08-01">{date}</time
  >

  <div class="flex flex-col gap-0">
    <div class="border-1 text-base text-gray-700">
      <slot name="description" />
    </div>
    <div class="flex flex-row gap-0 border-1 px-6 pt-4 pb-2">
      {
        tags &&
          tags.map((tag) => (
            <div class="mr-2 mb-2 inline-block rounded-full bg-blue-200 px-3 py-1 text-sm font-semibold text-blue-700">
              {tag}
            </div>
          ))
      }
    </div>
  </div>
</div>
