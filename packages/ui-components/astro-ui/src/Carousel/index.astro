---
interface Props {
  images: {
    img: string;
    altText: string;
  }[];
}

const { images } = Astro.props;
---

<div class="carousel carousel-center rounded-box bg-neutral max-w-md space-x-4">
  {
    images.map(({ img, altText }) => (
      <div class="carousel-item">
        <img src={img} class="rounded-box" alt={altText} />
      </div>
    ))
  }
</div>
