{
  "name": "@repo/astro-ui",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "imports": {
    "#*": "./src/*"
  },
  "exports": {
    "./styles.css": "./dist/index.css",
    "./*": "./src/*/index.astro",
    "./DaisyUICard": "./src/DaisyUICard/index.astro",
    "./SimpleGrid": "./src/SimpleGrid/index.astro",
    "./Modal": "./src/Modal/index.astro",
    "./Icon": "./src/Icon/index.astro"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npx @tailwindcss/cli -i ./src/styles.css -o ./dist/index.css",
    "dev": "npx @tailwindcss/cli -i ./src/styles.css -o ./dist/index.css  --watch",
    "astro-check": "astro check",
    "test": "echo 'no tests yet'",
    "format": "prettier . --write",
    "lint": "eslint .",
    "fix": "eslint . --fix",
    "inspect": "pnpm dlx @eslint/config-inspector@latest",
    "check-types": "tsc --noEmit",
    "@repo/layout-webcomponents": "workspace:^"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@repo/icon-paths": "workspace:^",
    "lorem-ipsum": "catalog:",
    "@tailwindcss/vite": "catalog:",
    "tailwindcss": "catalog:"
  },
  "devDependencies": {
    "@astrojs/check": "catalog:",
    "@open-wc/testing": "catalog:",
    "@repo/eslint-config": "workspace:^",
    "@repo/typescript-config": "workspace:^",
    "astro": "catalog:",
    "eslint": "catalog:",
    "prettier-plugin-astro": "catalog:",
    "prettier-plugin-tailwindcss": "catalog:",
    "typescript": "catalog:",
    "daisyui": "catalog:",
    "@tailwindcss/cli": "catalog:",
    "vite": "catalog:"
  },
  "peerDependencies": {
    "tailwind": ">=4",
    "astro": ">=5"
  }
}
