{
  "name": "@repo/react",
  "version": "1.1.0",
  "description": "react ui",
  "type": "module",
  "imports": {
    "#*": "./src/*"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "npx @tailwindcss/cli -i ./src/styles.css -o ./dist/index.css & tsup",
    "dev": "npx @tailwindcss/cli -i ./src/styles.css -o ./dist/index.css & tsup --watch",
    "test": "jest",
    "format": "prettier . --write",
    "lint": "eslint .",
    "fix": "eslint . --fix",
    "inspect": "eslint --inspect-config",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "jest": {
    "preset": "@repo/jest-presets/browser"
  },
  "keywords": [
    "react"
  ],
  "author": "Michael Connor",
  "license": "ISC",
  "devDependencies": {
    "@repo/eslint-config": "workspace:^",
    "@repo/typescript-config": "workspace:^",
    "@tailwindcss/postcss": "^4.1.0",
    "@types/node": "^22.13.17",
    "eslint": "^9.23.0",
    "postcss": "^8.5.3",
    "prettier-plugin-astro": "catalog:",
    "tsup": "^8.4.0",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "@types/react": ">=18",
    "@types/react-dom": ">=18",
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/cli": "^4.1.0"
  }
}
