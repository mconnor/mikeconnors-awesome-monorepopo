{
  "name": "@repo/react",
  "version": "1.1.0",
  "description": "react ui",
  "type": "module",
  "imports": {
    "#*": "./src/*"
  },
  "exports": {
    "./styles.css": "./dist/index.css",
    "./*": {
      "types": "./dist/*/index.d.ts",
      "import": "./dist/*/index.mjs"
    }
  },
  "scripts": {
    "build:styles": "npx @tailwindcss/cli -i ./src/styles.css -o ./dist/index.css",
    "build:components": "tsup",
    "dev:styles": "npx @tailwindcss/cli -i ./src/styles.css -o ./dist/index.css --watch",
    "dev:components": "tsup --watch",
    "check-types": "tsc --noEmit",
    "inspect": "pnpm dlx @eslint/config-inspector@latest",
    "lint": "eslint src --max-warnings 0",
    "test": "jest",
    "format": "prettier . --write",
    "fix": "eslint . --fix",
    "clean": "rm -rf dist"
  },
  "jest": {
    "preset": "@repo/jest-presets/browser"
  },
  "keywords": [
    "react"
  ],
  "author": "Michael Connor",
  "license": "ISC",
  "dependencies": {
    "@repo/utils": "workspace:^"
  },
  "devDependencies": {
    "@headlessui/react": "catalog:",
    "@heroicons/react": "catalog:",
    "@repo/design-system": "workspace:^",
    "@repo/eslint-config": "workspace:^",
    "@repo/typescript-config": "workspace:^",
    "@tailwindcss/cli": "catalog:",
    "@types/node": "catalog:",
    "daisyui": "catalog:",
    "eslint": "catalog:",
    "tailwindcss": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "@types/react": ">=18",
    "@types/react-dom": ">=18",
    "react": ">=18",
    "react-dom": ">=18"
  }
}
