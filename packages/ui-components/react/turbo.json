{
  "extends": ["//"],
  "tasks": {
    "build": {
      "with": ["build:styles", "build:components"]
    },
    "build:styles": {
      // "with": ["build:components"],
      "outputs": ["dist/**"]
    },
    "build:components": {
      "outputs": ["dist/**"]
    },

    "dev": {
      "with": ["dev:styles", "dev:components"]
    },
    "dev:styles": {
      "cache": false,
      "persistent": true
    },
    "dev:components": {
      "cache": false,
      "persistent": true
    }
  }
}
