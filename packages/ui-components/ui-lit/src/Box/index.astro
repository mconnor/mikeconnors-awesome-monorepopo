---
import type { BorderStyle, RmUnitType } from '@repo/styles/Types';

import { Box } from './box-l';

interface Props {
  padding?: RmUnitType;
  borderWidth?: RmUnitType;

  borderStyle?: BorderStyle;
  invert?: boolean;
}
const props = Astro.props;
---

<div>
  <Box {...props} client:visible>
    <slot />
  </Box>
</div>

<style>
  box-l {
    --box-text-color: var(--theme-primary);
    --box-background-color: var(--theme-secondary);
    --box-font-family: var(--theme-font-family);
  }
  .warning {
    --box-l-text-color: var(--theme-warning);
  }
</style>
