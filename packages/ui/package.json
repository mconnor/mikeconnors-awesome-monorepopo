{
  "name": "@repo/ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./components/counter": {
      "import": "./dist/components/counter.js",
      "require": "./dist/components/counter.js",
      "types": "./dist/components/counter.d.ts"
    },
    "./components/header": {
      "import": "./dist/components/header.js",
      "require": "./dist/components/header.js",
      "types": "./dist/components/header.d.ts"
    },
    "./utils/counter": {
      "import": "./dist/utils/counter.js",
      "require": "./dist/utils/counter.js",
      "types": "./dist/utils/counter.d.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "lint": "eslint .",
    "fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check-types": "tsc --noEmit",
    "clean": "find ./src -type f ( -name \"*.d.ts\" -o -name \"*.d.ts.map\" -o -name \"*.js\" ) -delete"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "eslint": "^9.7.0",
    "typescript": "^5.5.4"
  }
}
