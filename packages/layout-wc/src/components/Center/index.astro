---
import './Center.css';
import type { RmUnitType } from '@repo/styles/Types';

interface Props {
  max?: RmUnitType;
  andText?: boolean;
  gutters?: RmUnitType;
  intrinsic?: boolean;
}
const { max = '60ch', ...rest } = Astro.props;
---

<center-l max={max} {...rest}>
  <slot />
</center-l>

<script src="./Center.js"></script>
