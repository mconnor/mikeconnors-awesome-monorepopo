---
import './Switcher.css';
import type { RmUnitType } from '@repo/styles/Types';

interface Props {
  threshold?: RmUnitType; //"var(--measure)"
  space?: RmUnitType; // "var(--s1)"
  limit?: number; //limit = 4
  children: unknown;
}
const props = Astro.props;
---

<switcher-l threshold={props.threshold} space={props.space} limit={props.limit}>
  <slot />
</switcher-l>

<script src="./Switcher.js"></script>
