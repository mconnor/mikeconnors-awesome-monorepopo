---
import type { RmUnitType } from '../Types';

interface Props {
  threshold?: RmUnitType; //"var(--measure)"
  space?: RmUnitType; // "var(--s1)"
  limit?: number; //limit = 4
  children: unknown;
}
const props = Astro.props;
---

<switcher-l {...props}>
  <slot />
</switcher-l>

<script src="./Switcher.js"></script>

<style is:global>
  switcher-l {
    display: flex;
    flex-wrap: wrap;
  }

  switcher-l > * {
    flex-basis: calc((var(--measure) - 100%) * 999);
    /* flex: [max] [min] [ideal size]; */
    flex-grow: 1;
  }
</style>
