{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./vite.json",
    "compilerOptions": {
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "files": [
        "${configDir}/next-env.d.ts",
        "${configDir}/next.config.js"
    ],
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "${configDir}/.next/types/**/*.ts"
    ]
}