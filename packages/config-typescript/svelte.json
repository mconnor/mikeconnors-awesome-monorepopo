{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": ["./base.json"],
  "compilerOptions": {
    "lib": ["DOM.Iterable", "ESNext", "DOM"],
    "sourceMap": true,
    "strictNullChecks": true
  },
  "include": ["${configDir}/**/*.svelte", "${configDir}/*.config.mjs"],
  "exclude": [
    "${configDir}/.svelte-kit",
  "${configDir}/node_modules",
    "${configDir}/dist",
    "${configDir}/.turbo",
    "${configDir}/.vercel"
    ]
}
