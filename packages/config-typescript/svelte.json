{
  "extends": ["./base.json"],
  "compilerOptions": {
    "isolatedModules": true,
    "lib": ["DOM.Iterable"],
    "sourceMap": true
  },
  "include": ["${configDir}/**/*"],
  "exclude": [
    "${configDir}/node_modules/**",
    "${configDir}/src/service-worker.js",
    "${configDir}/src/service-worker/**/*.js",
    "${configDir}/src/service-worker.ts",
    "${configDir}/src/service-worker/**/*.ts",
    "${configDir}/src/service-worker.d.ts",
    "${configDir}/src/service-worker/**/*.d.ts",
    "${configDir}/.turbo"
  ]
}
