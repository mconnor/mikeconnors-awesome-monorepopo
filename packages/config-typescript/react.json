{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./vite.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
  },
  "exclude": [
    "${configDir}/node_modules",
    "${configDir}/dist",
    "${configDir}/.turbo",
  ],
  "include": [
    "${configDir}/**/*"
  ]
}