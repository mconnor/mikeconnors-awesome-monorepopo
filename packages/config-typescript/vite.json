{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.astro",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    ".astro/types.d.ts",
    "**/*.d.ts",
    "*.config.mjs",
    "*.config.js",
  ]
}