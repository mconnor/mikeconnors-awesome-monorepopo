{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strictNullChecks": true
  },
  "include": [
    "${configDir}/**/*"
  ],
  "exclude": [
    "${configDir}/node_modules",
    "${configDir}/.astro",
    "${configDir}/dist",
    "${configDir}/.turbo"
  ]
}