    "./styles.css": "./dist/styles.css"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:^",
    "@repo/typescript-config": "workspace:*",
    "@types/react": "^19.1.0",
    "eslint": "^9.24.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.3",
    "@tailwindcss/postcss": "^4.1.3",
    "class-variance-authority": "^0.7.1",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.3"
  }
