    "build": "npx @tailwindcss/cli -i ./src/styles.css -o ./dist/styles.css",
    "dev": "npx @tailwindcss/cli -i ./src/styles.css -o ./dist/styles.css --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "type-check": "tsc --noEmit",
