{
  "name": "@repo/design-system",
  "version": "1.0.0",
  "type": "module",
  "imports": {
    "#*": "./src/*"
  },
  "exports": {
    "./theme.css": "./dist/theme.css"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npx @tailwindcss/cli -i ./src/css/styles.css -o ./dist/theme.css",
    "dev": "npx @tailwindcss/cli -i ./src/css/styles.css -o ./dist/theme.css  --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "check-type": "tsc --noEmit",
    "format": "prettier . --write"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:^",
    "@repo/typescript-config": "workspace:*",
    "eslint": "catalog:",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:"
  },
  "dependencies": {
    "@tailwindcss/cli": "catalog:",
    "@tailwindcss/vite": "catalog:",
    "tailwindcss": "catalog:"
  }
}
