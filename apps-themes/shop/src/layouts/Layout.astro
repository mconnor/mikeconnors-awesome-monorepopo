---
import BaseLayout from './BaseLayout.astro';
import { Icon } from 'astro-icon/components';
interface Props {
  title: string;
  image?: string;
  description?: string;
}

const props = Astro.props;
---

<BaseLayout {...props}>
  <nav class="absolute top-0 right-0 p-6 lg:p-2">
    <a href="https://github.com/igorm84/astro-shop" target="_blank">
      <Icon name="mdi:github" class="h-6 w-6 text-gray-800 lg:h-8 lg:w-8" />
    </a>
  </nav>
  <main
    class="relative mx-auto min-h-screen max-w-6xl px-4 py-6 pb-20 lg:pt-10"
  >
    <slot />
    <footer
      class="absolute inset-x-0 bottom-0 py-8 text-center text-xs text-gray-400"
    >
      <a
        href="https://github.com/igorm84"
        class="inline-flex items-center gap-2"
        target="_blank"
        >Built by Igor Penaque @ 2023
      </a>
    </footer>
  </main>
</BaseLayout>
