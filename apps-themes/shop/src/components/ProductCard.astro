---
import { Image } from 'astro:assets';
import type { Product } from '../data';

interface Props {
  product: Product;
}

const { product } = Astro.props;
const transitionName = product.slug;
---

<a href={`/product/${product.slug}`} class="block">
  <article
    class="flex w-72 flex-col overflow-hidden rounded-lg bg-white shadow-sm transition-all hover:shadow-xl hover:shadow-gray-100 sm:w-60"
  >
    <div class="h-60 w-72 overflow-hidden sm:w-60">
      <Image
        src={product.cover}
        width="72"
        height="60"
        alt={product.name}
        transition:name={`${transitionName} image`}
        class="h-full w-full rounded-md object-cover object-center grayscale-[0.1] transition-all group-hover:scale-105 group-hover:grayscale-0"
      />
    </div>
    <div class="p-4">
      <h3
        class="truncate font-semibold"
        transition:name={`${transitionName} title`}
      >
        {product.name}
      </h3>
      <p
        class="truncate text-sm text-gray-600"
        transition:name={`${transitionName} description`}
      >
        {product.description}
      </p>
      <div class="mt-4 text-right" transition:name={`${transitionName} price`}>
        <span class="font-semibold">${product.price}</span>
      </div>
    </div>
  </article>
</a>
