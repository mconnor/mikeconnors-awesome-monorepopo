{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "tsconfig.json"
  ],
  "globalPassThroughEnv": [
    "AWS_SECRET_KEY",
    "GITHUB_TOKEN"
  ],
  "tasks": {
    "//#lint:root": {},
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!README.md",
        ".env*"
      ],
      "outputs": [
        ".turbo"
      ]
    },
    "lint": {
      "dependsOn": [
        "transit"
      ],
      "outputs": [
        ".turbo"
      ]
    },
    "format": {
      "dependsOn": [
        "^format"
      ]
    },
    "//#format:root": {},
    "inspect": {
      "dependsOn": [
        "^inspect"
      ]
    },
    "fix": {
      "dependsOn": [
        "^fix"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "preview": {
      "cache": true,
      "persistent": true
    },
    "transit": {
      "dependsOn": [
        "^transit"
      ]
    },
    "check-types": {
      "inputs": [
        "**/*.{ts,tsx}"
      ],
      "dependsOn": [
        "transit"
      ],
      "outputs": []
    },
    "astro-check": {
      "inputs": [
        "**/*.{astro}"
      ],
      "dependsOn": [
        "^transit"
      ]
    },
    "test": {
      "dependsOn": [
        "^lint",
        "^build"
      ]
    },
    "spell-check": {
      "inputs": [
        "**/*.md",
        "**/*.mdx"
      ]
    }
  }
}