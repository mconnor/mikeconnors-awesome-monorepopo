{
  "$schema": "./node_modules/turbo/schema.json",
  "globalEnv": [
    "NODE_ENV",
    "MODE",
    "PRODUCTION",
    "DEV",
    "USER_NAME",
    "ACCESS_KEY",
    "DOMAIN",
    "PROD",
    "import.meta.env.PROD",
    "import.meta.env.DEV",
    "ENABLE_EXPERIMENTAL_COREPACK"
  ],
  "globalPassThroughEnv": ["AWS_SECRET_KEY", "GITHUB_TOKEN","PLAYWRIGHT_*"],
  "envMode": "strict",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "!README.md", ".env*",
        "!test/**/*",
				"!e2e/**/*",
				"!performance/**/*",
				"!.astro/**/*",
				"!.cache/**/*",
				"!mod.js",
				"!mod.js.map"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
        "e2e": {
      "dependsOn": ["^build"]
    },
    "transit": {
      "dependsOn": ["^transit"]
    },
    "lint": {
      "dependsOn": ["transit"]
    },
    "format": {},
    "sync": {
      "dependsOn": ["transit"]
    },
    "inspect": {},
    "fix": {
      "dependsOn": ["transit"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "preview": {
      "cache": true,
      "persistent": true
    },
    "check-types": {
      "inputs": ["**/*.{ts,tsx}"],
      "cache": true,
      "dependsOn": ["^check-types"]
    },
    "astro-check": {
      "inputs": ["**/*.{astro,ts,tsx,js,jsx}"],
      "cache": true,
      "dependsOn": ["^astro-check"]
    },
    "test": {
      "dependsOn": ["^lint", "^clean", "^build"]
    },
    "spell-check": {
      "inputs": ["**/*.md", "**/*.mdx"]
    },
    "clean": {}
  }
}
