{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env", "tsconfig.json"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "!README.md", ".env*"],
      "outputs": ["dist/**"]
    },

    "lint": {
      "dependsOn": ["^lint"],
      "cache": true
    },
    "inspect": {
      "dependsOn": ["^inspect"]
    },
    "update": {
      "dependsOn": ["^update"],
      "cache": false
    },
    "updateAstro": {},

    "fix": {
      "dependsOn": []
    },
    "format": {
      "cache": true
    },
    "format:check": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "preview": {
      "cache": true,
      "persistent": true
    },
    "transit": {
      "dependsOn": ["^transit"]
    },
    "check-types": {
      "dependsOn": ["transit"]
    }
  }
}
