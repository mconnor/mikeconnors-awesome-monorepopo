{
  "$schema": "./node_modules/turbo/schema.json",
  "globalEnv": [
    "NODE_ENV",
    "MODE",
    "PRODUCTION",
    "DEV",
    "PROD",
    "import.meta.env.PROD",
    "import.meta.env.DEV"
  ],
  "globalPassThroughEnv": ["AWS_SECRET_KEY", "GITHUB_TOKEN"],
  "envMode": "strict",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "!README.md", ".env*"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["transit"]
    },
    "//#lint:root": {},
    "transit": {
      "dependsOn": ["^transit"]
    },
    "format": {},
    "sync": {
      "dependsOn": ["^sync"]
    },
    "inspect": {},
    "fix": {
      "dependsOn": ["^fix"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "preview": {
      "cache": true,
      "persistent": true
    },
    "check-types": {
      "inputs": ["**/*.{ts,tsx}"],
      "cache": true,
      "dependsOn": ["transit"]
    },
    "astro-check": {
      "inputs": ["**/*.{astro,ts,tsx,js,jsx}"],
      "cache": true,
      "dependsOn": ["transit"]
    },
    "test": {
      "dependsOn": ["^lint", "^build"]
    },
    "spell-check": {
      "inputs": ["**/*.md", "**/*.mdx"]
    },
    "clean": {}
  }
}
