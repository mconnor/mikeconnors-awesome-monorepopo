{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env", "tsconfig.json"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "!README.md", ".env*"],
      "outputs": ["dist/**"]
    },

    "lint": {
      "dependsOn": ["^lint"]
    },
    "//#lint:root": {},
    "inspect": {
      "dependsOn": ["^inspect"]
    },
    "//#inspect:root": {},

    "update": {
      "dependsOn": ["^update"],
      "cache": false
    },

    "fix": {
      "dependsOn": ["^fix"]
    },
    "format": {},
    "format:check": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "preview": {
      "cache": true,
      "persistent": true
    },

    "transit": {
      "dependsOn": ["^transit"]
    },
    "check-types": {
      "dependsOn": ["transit"],
      "inputs": ["**/*.{ts,tsx, astro}"]
    }
  }
}
