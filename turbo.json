{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "lint": {},
    "fix": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "preview": {
      "cache": true,
      "persistent": true
    },
    "topo": {
      "dependsOn": ["^topo"]
    },
    "check-types": {
      "dependsOn": ["topo"],
      "inputs": ["**/*.{ts,tsx}"]
    }
  }
}
